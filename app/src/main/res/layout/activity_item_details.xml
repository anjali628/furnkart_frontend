<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".ItemDeatailsActivity">

    <ImageButton
        android:id="@+id/ib_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f2f2f2"
        android:src="@drawable/ic_baseline_arrow_back_24">

    </ImageButton>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ib_item_details"
        android:scrollbars="vertical">

        <RelativeLayout
            android:id="@+id/rl1_item_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_item_details"
                android:layout_width="match_parent"
                android:layout_height="320dp">

            </androidx.viewpager2.widget.ViewPager2>

            <RelativeLayout
                android:id="@+id/rl2_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vp_item_details"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_colors_item_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">


                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:id="@+id/iv_double1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible">

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#CCC6C6">

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible"
                            android:id="@+id/iv_double2"
                            >

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#CAA081">

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible"
                            android:id="@+id/iv_double3"
                            >

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#736767">

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible"
                            android:id="@+id/iv_double4"
                            >

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#711C1C"

                                >

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="visible"
                            android:id="@+id/iv_double5"
                            >

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#8F4F4F"

                                >

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/ll_colors_item_details"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_dot1"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/normal_dot">

                    </ImageView>

                    <ImageView
                        android:id="@+id/iv_dot2"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/normal_dot">

                    </ImageView>

                    <ImageView
                        android:id="@+id/iv_dot3"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/normal_dot">

                    </ImageView>

                    <ImageView
                        android:id="@+id/iv_dot4"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/normal_dot">

                    </ImageView>

                    <ImageView
                        android:id="@+id/iv_dot5"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/selected_dot">

                    </ImageView>
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_above="@id/ll_item_details"
                android:layout_marginBottom="10dp"
                android:background="#e7e7e7"

                >

            </View>

            <LinearLayout
                android:id="@+id/ll_item_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl2_item_details"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_std"
                    android:letterSpacing="-0.02"
                    android:text="@string/corner"
                    android:textColor="@color/black"
                    android:textSize="17sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/avenir_black"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/cobb"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="22sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/avenir_std"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/dollar"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:translationY="-1.97sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/avenir_std"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/with_open"
                    android:textAllCaps="false"
                    android:textColor="#66000000"
                    android:textSize="15sp"
                    android:translationY="-1.17sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/avenir_std"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/perfect"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:translationY="-1.17sp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_upho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/avenir_std"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/select_upho"
                        android:textColor="@color/black"
                        android:textSize="17sp">

                    </TextView>

                    <TextView
                        android:id="@+id/gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/avenir_black"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="Gray"
                        android:textColor="@color/black"
                        android:textSize="17sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll1_colors_item_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">


                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:id="@+id/iv_double11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible">

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#CCC6C6"

                                >

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible"
                            android:id="@+id/iv_double22"
                            >

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#CAA081">

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible"
                            android:id="@+id/iv_double33">

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#736767">

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="invisible"
                            android:id="@+id/iv_double44">

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#711C1C"

                                >

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_item_details"
                            android:visibility="visible"
                            android:id="@+id/iv_double55">

                        </ImageView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="#8F4F4F"

                                >

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/select_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/avenir_roman"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/select_quan"
                        android:textColor="@color/black"
                        android:textSize="17sp">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/button"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_bg"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_add_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/black"
                            android:clickable="true"
                            android:src="@drawable/ic_baseline_add_24" />

                        <TextView
                            android:id="@+id/btn_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:fontFamily="@font/avenir_black"
                            android:letterSpacing="-0.02"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/btn_sub_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/black"
                            android:clickable="true"
                            android:src="@drawable/subtract_icon" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_item_details"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_black"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/about_this_product"
                    android:textColor="@color/black"
                    android:textSize="22sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="15dp"
                    android:background="#e7e7e7">

                </View>

                <TextView
                    android:id="@+id/tv_key_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:fontFamily="@font/avenir_roman"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/key_features"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    >

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="15dp"
                    android:background="#e7e7e7">

                </View>

                <TextView
                    android:id="@+id/tv_environment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:fontFamily="@font/avenir_roman"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"

                    android:text="@string/environment"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    >

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="15dp"
                    android:background="#e7e7e7">

                </View>

                <TextView
                    android:id="@+id/tv_good_to_know"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:fontFamily="@font/avenir_roman"
                    android:letterSpacing="-0.02"

                    android:lineSpacingExtra="0sp"
                    android:text="@string/good_to_know"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="15dp"
                    android:background="#e7e7e7">

                </View>

                <TextView
                    android:id="@+id/tv_assembly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:fontFamily="@font/avenir_roman"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/assembly"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    >

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="80dp"
                    android:background="#e7e7e7">

                </View>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_details"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@color/white"
            >

            <LinearLayout
                android:id="@+id/ll3_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/btn1_bg_item_details"
                    android:src="@drawable/ic_baseline_favorite_border_24_red"

                    >


                </ImageButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn2_bg_item_details"
                    android:fontFamily="@font/avenir_roman"
                    android:letterSpacing="0.02"
                    android:text="@string/add_to_cart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp">

                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="135dp"
                android:layout_height="5dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/line">

            </View>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</RelativeLayout>


