<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".ItemForcus">

    <RelativeLayout
        android:id="@+id/ll_item_forcus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#f2f2f2"
            android:src="@drawable/ic_baseline_close_24">

        </ImageButton>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:clipToPadding="false"
            android:focusable="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#f2f2f2"
                android:src="@drawable/bag_cart">

            </ImageButton>

            <TextView
                android:id="@+id/cart_badge"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cart_item_counter_bg"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

        </FrameLayout>

    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_item_forcus"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@id/ll_item_forcus">

    </androidx.viewpager2.widget.ViewPager2>

    <RelativeLayout
        android:id="@+id/rl2_item_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vp_item_forcus"
        android:background="@color/white"
        android:paddingTop="25dp">

        <LinearLayout
            android:id="@+id/ll_colors_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_double1"
                    android:src="@drawable/circle_item_details"
                    android:visibility="invisible">

                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="35dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="#CCC6C6"

                        >

                    </ImageView>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_item_details"
                    android:id="@+id/iv_double2"
                    android:visibility="invisible">

                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="35dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="#CAA081">

                    </ImageView>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_item_details"
                    android:id="@+id/iv_double3"
                    android:visibility="invisible">

                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"

                    app:cardCornerRadius="35dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="#736767">

                    </ImageView>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_item_details"
                    android:id="@+id/iv_double4"
                    android:visibility="invisible">

                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="35dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="#711C1C"

                        >

                    </ImageView>
                </androidx.cardview.widget.CardView>
            </FrameLayout>


            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_item_details"
                    android:id="@+id/iv_double5"
                    android:visibility="visible">

                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="35dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="#8F4F4F"
                        >

                    </ImageView>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/ll_colors_item_details"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dote1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:id="@+id/iv_dote2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:id="@+id/iv_dote3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:id="@+id/iv_dote4"

                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:id="@+id/iv_dote5"

                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/selected_dot">

            </ImageView>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView

                android:id="@+id/cv_item_details"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"

                >
                <LinearLayout
                    android:id="@+id/ll3_item_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/btn1_bg_item_details"
                        android:src="@drawable/ic_baseline_favorite_border_24_red"
                        >

                    </ImageButton>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn2_bg_item_details"
                        android:fontFamily="@font/avenir_roman"
                        android:letterSpacing="0.02"
                        android:text="@string/add_to_cart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp">

                    </androidx.appcompat.widget.AppCompatButton>
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="135dp"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/line">

                </View>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>