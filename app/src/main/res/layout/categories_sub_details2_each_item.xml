<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/view_each_item">

    </View>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="0dp"
            android:layout_below="@id/view_each_item"


            >

            <ImageView
                android:id="@+id/iv_living1"
                android:layout_width="160dp"
                android:layout_height="260dp"
                android:background="@drawable/categories_bg"
                android:backgroundTint="#e4e4de"
                android:padding="30dp"
                android:src="@drawable/living_1">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_living1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/avenir_roman"
                android:padding="15dp"
                android:text="$166,99"
                android:id="@+id/tv_rate"
                android:textColor="#000000"
                android:textSize="15sp">

            </TextView>

            <ImageButton
                android:id="@+id/ib_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/iv_living1"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#e4e4de"
                android:src="@drawable/ic_baseline_favorite_24">

            </ImageButton>

        </RelativeLayout>

</RelativeLayout>



