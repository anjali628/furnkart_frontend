<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="21dp"
            >


            <ImageView
                android:id="@+id/living1"
                android:layout_width="174dp"
                android:layout_height="274dp"
                android:background="@drawable/categories_bg"
                android:backgroundTint="#e4e4de"
                android:padding="30dp"
                android:src="@drawable/living_1">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/living1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/avenir_roman"
                android:padding="15dp"
                android:text="$166,99"
                android:textColor="#000000"
                android:textSize="15sp">

            </TextView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/living1"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#e4e4de"
                android:src="@drawable/ic_baseline_favorite_24">

            </ImageButton>

        </RelativeLayout>






</RelativeLayout>


