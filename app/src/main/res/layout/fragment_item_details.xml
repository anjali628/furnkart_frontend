<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <ImageView
        android:id="@+id/img_corner_sofa"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:background="#f2f2f2"
        android:padding="30dp"
        android:src="@drawable/corner_sofa_itemdetails">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_corner_sofa"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/ll_colors_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">


            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="45dp"
                app:cardMaxElevation="0dp"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_item_details"
                        android:visibility="invisible">

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="35dp">


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="#CCC6C6"

                            >

                        </ImageView>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="45dp"
                app:cardMaxElevation="0dp"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_item_details"
                        android:visibility="invisible">

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="35dp">


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="#CAA081"

                            >

                        </ImageView>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="45dp"
                app:cardMaxElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_item_details"
                        android:visibility="invisible">

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="35dp">


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="#736767"

                            >

                        </ImageView>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="45dp"
                app:cardMaxElevation="0dp"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_item_details"
                        android:visibility="invisible">

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="35dp">


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="#711C1C"

                            >

                        </ImageView>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="45dp"
                app:cardMaxElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_item_details"
                        android:visibility="visible">

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="35dp">


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="#8F4F4F"

                            ></ImageView>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/ll_colors_item_details"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/normal_dot">

            </ImageView>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/selected_dot">

            </ImageView>
        </LinearLayout>


    </RelativeLayout>
    </RelativeLayout>